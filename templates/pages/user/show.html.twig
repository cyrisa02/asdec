{% extends 'base.html.twig' %}

{% block title %}Utilisateur
{% endblock %}

{% block body %}
{% if app.user %}

	<div class="mt-4 container">
		<h1>Mon Compte
			{{ user.responsablity}}

		</h1>
		<div class="container">

			<a href="{{ path('app_usermember_edit', {'id': user.id}) }}" class="btn btn-secondary btn-lg mt-4 ms-4">Modifier vos données ou ajouter votre photo</a>
			<a href="{{ path('home.index') }}" class="ms-4 mt-4">Retour à l'accueil</a>


		</div>


		<table class="table">
			<tbody>
				<tr>
					<th>N° de carte</th>
					<td>{{ user.cardnr }}</td>
				</tr>
				<tr>
					<th>Photo</th>
					<td>
						{% if user.picture is defined %}
							<img src="{{ asset('uploads/') }}{{ user.picture }}" alt="{{ user.name }}" style="max-width: 10rem; height: auto; border-radius: 50%;">


						{% else %}
							<p>Pas de photo</p>
						{% endif %}
					</td>
				</tr>
			</tbody>
		</td>
	</tr>

	<tr>
		<th>Activités</th>
		<td>
			{% for sport in user.sports %}
				{{ sport.title }}
				/
			{% endfor %}
		</td>

	</tr>


	<tr>
		<th>Email</th>
		<td>{{ user.email }}</td>
	</tr>

	<tr>
		<th>Nom</th>
		<td>{{ user.name }}</td>
	</tr>
	<tr>
		<th>Prénom</th>
		<td>{{ user.firstname }}</td>
	</tr>
	<tr>
		<th>Adresse</th>
		<td>{{ user.address }}</td>
	</tr>
	<tr>
		<th>Code Postale</th>
		<td>{{ user.zipcode }}</td>
	</tr>
	<tr>
		<th>Ville</th>
		<td>{{ user.city }}</td>
	</tr>
	<tr>
		<th>Téléphone</th>
		<td>{{ user.phone }}</td>
	</tr>
	<tr>
		<th>Date de naissance</th>
		<td>{{ user.Birthdate ? user.Birthdate|date('d-m-Y') : '' }}</td>
	</tr>
	<tr>
		<th>Statut du réglement</th>
		<td>{{ user.IsValid ? 'Payé' : 'Reste à payer' }}</td>
	</tr>
	<tr>
		<th>Date d'entrée</th>
		<td>{{ user.CreatedAt ? user.CreatedAt|date('d-m-Y') : '' }}</td>
	</tr>
	<tr>
		<th>Profession</th>
		<td>{{ user.job }}</td>
	</tr>
	<tr>
		<th>Certificat Médical</th>
		<td>{{ user.isMedical ? 'Oui' : 'Non' }}</td>
	</tr>
	<tr>
		<th>Année</th>
		<td>{{ user.certificatyear }}</td>
	</tr>
	<tr>
		<th>Déjà ré-inscrit</th>
		<td>{{ user.IsRegistered ? 'Oui' : 'Non' }}</td>

	</tr>

</tbody></table></div>{% endif %}{% endblock %}
