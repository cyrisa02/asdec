{% extends 'base.html.twig' %}

{% block title %}Newsletter
{% endblock %}

{% block body %}
	{% if app.user %}

		<h1>Newsletter</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ newsletter.id }}</td>
				</tr>
				<tr>
					<th>Name</th>
					<td>{{ newsletter.name }}</td>
				</tr>
				<tr>
					<th>Content</th>
					<td>{{ newsletter.content }}</td>
				</tr>
				<tr>
					<th>Created_at</th>
					<td>{{ newsletter.createdAt ? newsletter.createdAt|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
				<tr>
					<th>Is_sent</th>
					<td>{{ newsletter.isSent ? 'Yes' : 'No' }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('app_newsletter_index') }}">Retour Ã  la liste</a>

		<a href="{{ path('app_newsletter_edit', {'id': newsletter.id}) }}">Modifier</a>

		{{ include('pages/newsletter/_delete_form.html.twig') }}
	{% endif %}

{% endblock %}
