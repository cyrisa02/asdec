{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<h1>Inscription d'un membre du Conseil d'Administration</h1>
	<h2>Cette inscription ouvre des droits d'accès à certaines fonctionnalités.</h2>
	<p>Sinon vous pouvez vous inscrire avec un statut normal en cliquant sur ce lien
		<a href=" {{ path('app_register_member')}} ">espace.</a>
	</p>


	{{ form_start(registrationForm) }}
	{{ form_row(registrationForm.name) }}
	{{ form_row(registrationForm.firstname) }}
	{{ form_row(registrationForm.address) }}
	{{ form_row(registrationForm.zipcode) }}
	{{ form_row(registrationForm.city) }}
	{{ form_row(registrationForm.phone) }}
	{{ form_row(registrationForm.job) }}
	{{ form_row(registrationForm.birthdate) }}
	{{ form_row(registrationForm.isMedical) }}
	{{ form_row(registrationForm.certificatyear) }}
	{{ form_row(registrationForm.email) }}
	{{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
	{{ form_row(registrationForm.agreeTerms) }}

	<button type="submit" class="btn btn-primary btn-lg mt-4">Enregistrer</button>

	{{ form_end(registrationForm) }}
{% endblock %}
